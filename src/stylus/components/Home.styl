.homeMobile__join__container__text__headline
  font-size: 35px
  line-height: 48px
  color: #000
  text-align: center
  padding-top: 10px

.homeMobile__join__container__text__body
  font-size: 21px
  line-height: 31px
  color: #000
  font-weight: 300
  padding: 20px

.homeMobile__join__container__buttons
  display: flex
  justify-content: flex-start
  flex-direction: row
  align-items: flex-start
