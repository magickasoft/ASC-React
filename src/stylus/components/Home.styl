  margin: auto


.homeMobile__recentActivity__container
  padding: 20px 0

.homeMobile__recentActivity__container__column__headline
  font-size: 25px
  line-height: 30px
  color: #fff
  margin: auto;
  margin-bottom: 20px
  text-align: center

.homeMobile__recentActivity__container__column__body
  border-bottom: 1px solid #a7a7a7
  border-top: 1px solid #a7a7a7
  display: flex
  margin: 0 auto
  justify-content: center
  flex-direction: row
  align-items: center
  padding-top: 5px
  padding-bottom: 5px

.homeMobile__recentActivity__container__column__body__right
  display: flex
  flex-direction: column
  align-items: flex-start
  font-weight: 600
  margin-top: 15px
  margin-bottom: 15px
  width: 50%

.homeMobile__recentActivity__container__column__body__left
  // margin-right: 30px
  display: flex
  flex-direction: column
  align-items: flex-start
  font-weight: 600
  margin-top: 15px
  margin-bottom: 15px
  width: 50%

.homeMobile__getConnected__container
  display: flex
  justify-content: space-around
  flex-direction: column
  align-items: center

.homeMobile__getConnected__text
  font-size: 30px
  line-height: 45px
  color: #fff
  text-align: center

.homeMobile__stayConnected__container
  width: 100%
  background-color: #e5e5e5
  min-height: 400px
  padding-top: 30px
  display: flex
  justify-content: center
  flex-direction: column

.homeMobile__stayConnected__text
  display: flex
  flex-direction: column
  align-items: center
  font-weight: 600

.homeMobile__stayConnected__image
  display: flex
  flex-direction: row
  align-items: flex-end
  justify-content: center
  font-weight: 600
  width: 100%
  min-height: 330px

.homeMobile__stayConnected__text__headline
  margin-bottom: 5px
  font-size: 40px
  line-height: 45px
  color: $material-background-color
  text-align: center

.homeMobile__stayConnected__imgButtons
  display: flex
