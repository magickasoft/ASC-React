  background-size: cover
  background-position: 50%
  min-height: calc(100vh - 44px)
  display: flex

.homeMobile__header__container
  display: flex
  flex-direction: column
  align-items: center
  font-weight: 600
  margin: auto
  text-align: center

.homeMobile__header__buttonCol
  display: flex
  justify-content: flex-start
  flex-direction: column
  align-items: flex-start

.homeMobile__join__container
  // width: 100%
  background-color: #e1e1e1

.homeMobile__join__container__text
  display: flex
  flex-direction: column
  align-items: flex-start
